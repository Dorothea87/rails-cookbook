<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path "banner.jpg" %> );">
  <div class="container">
    <h1>My cookbook</h1>
    <p>Save your favourite recipes</p>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-between align-items-center py-3">
    <h2>List of categories</h2>
    <%= link_to "new category", new_category_path, class: "btn btn-primary" %>
  </div>

  <div class="card-container d-flex flex-wrap justify-content-between">
    <% @categories.each do |category| %>
      <div>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),
            <% if category.photo.attached? %>
              url( '<%= cl_image_path category.photo.key, height: 300, width: 400, crop: :fill %>' )
            <% else %>
              url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)
            <% end %>
              ;">
          <h3><%= link_to category.name, category_path(category), class: "text-decoration-none", style: "color: #ffffff"%></h3>
          <p><%= category.recipes.length %> recipes</p>
          <%= link_to "🗑️", category_path(category), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this?"}, class: "card-category-icon text-decoration-none" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

